<launch>
  <!-- Arguments -->

<!-- UNTESTED!!! idea to create a separate launch file to facilitate mapping by robot_m only-->
<!-- copied from booster 2 and edited/trimmed -->

  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find guide_robot)/maps/hospital.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="paused" value="false"/>
  <arg name="use_sim_time" value="true"/>
  <arg name="gui" default="false"/>
  <arg name="headless" value="false"/>
  <arg name="debug" value="false"/>
  <arg name="world_name" default="$(find guide_robot)/worlds/hospital.world"/>

  <arg name="robot_m"  default="robot_m"/>

  <!-- launch the custom world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="False"/>
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="verbose" value="True"/>
  </include>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find turtlebot3_navigation)/launch/amcl.launch"/>
    <param name="use_map_topic" value="true"/>
  
  <!-- move_base -->
  <include file="$(find turtlebot3_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz: fina and access turtlebot3_navigation rviz settings-->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz_nav" required="true" args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz"/>
  </group>
</launch>